{   // See https://raw.githubusercontent.com/jshint/jshint/master/examples/.jshintrc and http://www.jshint.com/docs/options

    "newcap"        : false, // React encourages such use
    "maxdepth"      : 4,

    "expr"	    : true,

    "globalstrict"  : true,

    "browser"       : true,
    "devel"         : false,
    "jquery"        : true,
    "node"          : true,

    "globals"       : {
        "describe"   : false,
        "it"         : false,
        "xdescribe"  : false,
        "xit"        : false,
        "before"     : false,
        "beforeEach" : false,
        "after"      : false,
        "afterEach"  : false
    }
}
